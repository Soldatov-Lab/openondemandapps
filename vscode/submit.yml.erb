---
batch_connect:
  template: "basic"
  conn_params:
     - csrf_token

script:
  queue_name: "<%= queue %>"
  native:
     - "-p"
     - "<%= queue %>"
     - "-N"
     - "1"
     - "-n"
     - "1"
     - "-c"
     - "<%= num_cores %>"
     - "--mem"
     - "<%= memory %>G"
     - "-t"
     - "0-<%= num_hours %>:00:00"
     - "--gpus"
     - "<%= num_gpus %>"
     <%- if !excluded_nodes.blank? -%>
     - "--exclude"
     - "<%= excluded_nodes %>"
     <%- end -%>
