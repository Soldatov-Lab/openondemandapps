#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to specified directory
cd "${HOME}"

#
# Start Jupyter Notebook Server
#

<%- unless context.modules.blank? -%>
# Purge the module environment to avoid conflicts
module purge

# Load the require modules
module load <%= context.modules %>

# List loaded modules
module list
<%- end -%>

# Benchmark info
echo "TIMING - Starting cellxgene at: $(date)"

# Launch the Jupyter Notebook Server
set -x


export GATEWAY_PORT=${port}
export GATEWAY_IP=0.0.0.0
export EXTERNAL_HOST='isvood001.mskcc.org/rnode/${host}/${port}/'
#export EXTERNAL_PROTOCOL='https'

echo $GATEWAY_PORT

<%= context.cellxgene_binary %>cellxgene launch <%= context.anndata_file %> --port=${port} --host 0.0.0.0


