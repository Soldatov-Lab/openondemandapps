#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to specified directory
cd "${HOME}"

#
#

<%- unless context.modules.blank? -%>
# Purge the module environment to avoid conflicts
module purge

# Load the require modules
module load <%= context.modules %>

# List loaded modules
module list
<%- end -%>

# Benchmark info
echo "TIMING - Starting cellxgene at: $(date)"

# Launch cellxgene
set -x

<%= context.cellxgene_binary %> launch <%= context.anndata_file %> --port=${port} --host 0.0.0.0


